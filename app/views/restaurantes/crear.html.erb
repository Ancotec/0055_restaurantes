<h1 class="">Registrar nuevo restaurante</h1>


<%= form_with(model: @restaurante) do |formulario| %>

    <div class="mb-3">
        <%= formulario.label :nombre, class: 'form-label' %>
        <%= formulario.text_field :nombre, class: 'form-content' %>
    <div>

    <div class="mb-3">
        <%= formulario.label :tipo_comida, class: 'form-label' %>
        <%= formulario.select :tipo_comida, options_from_collection_for_select(@tipos_comidas, :id, :tipo),
            {include_blank: 'Elige un tipo de comida'}, #opciones del select
             class: "form-select" %>
    <div>

    <%= formulario.submit%>
<%end%>